---
import CtaButton from "../../shared/CtaButton.astro";
import GradiantText from "../../shared/GradiantText.astro";
import LazyImage from "../../shared/LazyImage.astro";
import SubTitle from "../../shared/SubTitle.astro";
import Title from "../../shared/Title.astro";
import heroImg from "./assets/wind3.jpg";

const heroSection = {
  headline1: "Impulsa",
  headline2: "Tu Negocio",
  headline3: "Con Una Web",
  headline4: "Profesional",
  subheading1: "La plantilla perfecta para destacar tu empresa online.",
  subheading2: "Diseño moderno, rápido y adaptable a cualquier rubro.",
  subheading3: "Convierte visitantes en clientes y haz crecer tu negocio.",
  buttonText: "Solicitar",
  backgroundImage: "hero-background-image.jpg",
};

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<style>
.hero-element {
  opacity: 0;
  transform: translateY(50px);
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in-up {
  animation: fadeInUp 1s ease-out forwards;
}
</style>

<section class=`relative  ${className} w-full h-[80vh]` id="hero">
  <div class="w-full h-[80vh] pt-[100px]">
    <div
      class="w-full h-full grid grid-cols-1 md:grid-cols-2 justify-end bg-base-100 dark:bg-base-dark-900"
    >
      <div class="justify-center flex flex-col text-center md:ml-auto">
        <div id="hero-title" class="hero-element">
          <Title className="">
            {heroSection.headline1}
            <GradiantText
              >{" " + heroSection.headline2}
              <br />
              {" " + heroSection.headline3}
            </GradiantText>{heroSection.headline4}
          </Title>
        </div>
        <div id="hero-subtitle" class="hero-element">
          <SubTitle className="mt-10 leading-9 italic">
            {heroSection.subheading1}
            <br />
            {heroSection.subheading2}<br />
            {heroSection.subheading3}
          </SubTitle>
        </div>
        <div class="hero-button hero-element pt-10">
          <a href="https://be.synergit.cl/">
            <CtaButton href="https://be.synergit.cl/">{heroSection.buttonText}</CtaButton>
          </a>
        </div>
      </div>
      <div class="flex relative pt-10 md:p-0">
        <LazyImage
          src={heroImg}
          alt="A picture of a wind turbine."
          className="w-full h-full object-cover"
        />
        <svg
          class="fill-base-100 dark:fill-base-dark-900 z-10 absolute top-0 start-0 h-full hidden md:block"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 500 400"
        >
          <path d="M0 0l0 400L100 0Z"> </path>
        </svg>
      </div>
    </div>
  </div>
</section>

<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
  const title = document.getElementById('hero-title');
  const subtitle = document.getElementById('hero-subtitle');
  const button = document.querySelector('.hero-button');

  // Animar elementos con delays
  setTimeout(() => title.classList.add('animate-fade-in-up'), 200);
  setTimeout(() => subtitle.classList.add('animate-fade-in-up'), 600);
  setTimeout(() => button.classList.add('animate-fade-in-up'), 1000);
});
</script>
